@model Models.ViewModels.EmployeeViewModels.CreateEmployeeViewModel

<input type="hidden" asp-for="@Model.Employee.EmployeeId" value="@Model.Employee.EmployeeId" />

<div class="container">
    <div class="form-group">
        <label class="control-label">First Name</label>
        <input class="form-control" asp-for="@Model.Employee.FirstName" />
        <span class="test-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Last Name</label>
        <input class="form-control" asp-for="@Model.Employee.LastName" />
        <span class="test-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Mobile Number *</label>
        <input required class="form-control" asp-for="@Model.EmployeeDetails.MobileNumber" />
        <span class="test-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Home Phone Number</label>
        <input class="form-control" asp-for="@Model.EmployeeDetails.HomePhoneNumber" />
        <span class="test-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Address</label>
        <input class="form-control" asp-for="@Model.EmployeeDetails.Address" />
        <span class="test-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Job Role</label>
        <select asp-items="@(new SelectList(Model.JobRoles, "JobRoleId", "JobRoleTitle", Model.Employee.JobRoleId))" asp-for="@Model.Employee.JobRoleId" class="form-control">
            <option value="0">Please select an option</option>
        </select>
        <span class="test-danger"></span>
    </div>

    <div class="card-footer pt-5">
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>

